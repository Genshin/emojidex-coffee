      nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
        .container
          .navbar-header
            a(href="#")
              img(src="img/logo.png")
            button.navbar-toggle.collapsed(data-target="#navbar-top" data-toggle="collapse" type="button")
