doctype html
html
  head
    meta(charset="utf-8")
    meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    title emojidex-web
    meta(content="" name="description")
    meta(content="width=device-width" name="viewport")
    link(href="css/document.css" rel="stylesheet")
    link(href="css/emojidex.css" rel="stylesheet")
    script(src="https://code.jquery.com/jquery-3.4.1.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous")
    script(src="js/emojidex.js")
    script.
      (function() {
        $(document).ready((function(_this) {
          return async function() {
            $.ajax('./README.html').then((data) => {
              $('.doc-content').append(data)
            })

            $(".emojidex-plain_text").emojidexAutocomplete()
            await $(".emojidex-plain_text").data().plugin_emojidexAutocomplete

            $(".emojidex-content_editable").emojidexAutocomplete()
            await $(".emojidex-content_editable").data().plugin_emojidexAutocomplete

            $("#palette-btn").emojidexPalette()
            await $("#palette-btn").data().plugin_emojidexPalette
            $("#palette-input").emojidexPalette()
            await $("#palette-input").data().plugin_emojidexPalette

            $("body").emojidexReplace()
            await $('body').data().plugin_emojidexReplace
            console.log('Completed emojidexReplace!!')
          };
        })(this));
      }).call(this);

